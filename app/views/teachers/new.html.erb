<h1>New Teacher</h1>

<%= form_for :teacher, url: teachers_path do |f| %>
    <p>
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :room %><br>
      <%= f.text_field :room %>
    </p>
    <p>
      <%= f.label :comments %><br>
      <%= f.text_area :comments %>
    </p>
    <p><%= f.submit %></p>
<% end %>
<br>
<p>
  <%= link_to 'Back', teachers_path %>
  <%= link_to 'Home Page', root_path %>
</p>

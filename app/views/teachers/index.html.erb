<h1>Teacher List</h1>


<table border="1">
  <tr>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Room</th>
    <th>Comments</th>
  </tr>
  <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.room %></td>
        <td><%= teacher.comments %></td>
        <td><%= link_to 'Select', teacher_path(teacher) %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
      </tr>
  <% end %>
</table>

<br><p><%= link_to 'Home Page', root_path %></p>
<p><%= link_to 'Add New Teacher or Staff Member', new_teacher_path %></p>
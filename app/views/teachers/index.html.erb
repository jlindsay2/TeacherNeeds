<h1>Teachers and Staff</h1>

<table border="1" class="center">
  <tr>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Room</th>
    <th>Comments</th>
  </tr>
  <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.room %></td>
        <td><%= teacher.comments %></td>
        <td><%= link_to 'Requests', teacher_path(teacher) %>&nbsp;&nbsp;
            <%= link_to 'Profile', edit_teacher_path(teacher) %>
        </td>
      </tr>
  <% end %>
</table>

<br><p><%= link_to 'Home Page', root_path %></p>
